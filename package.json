{
  "name": "series-notifier-serverless",
  "version": "1.0.0",
  "description": "A facebook messenger bot that notifies you when you favorite series airs a new episode",
  "main": "src/index.js",
  "scripts": {
    "build": "rimraf build && webpack",
    "webpack:stats": "rimraf build && NODE_ENV=production webpack -p --profile --json > webpack-stats.json",
    "predeploy:function": "yarn build",
    "deploy:function": "sls deploy function -f",
    "predeploy:all": "yarn build",
    "deploy:all": "sls deploy --verbose",
    "invoke": "sls invoke -p event.json -f",
    "preinvoke:local": "yarn build",
    "invoke:local": "SERVERLESS_LOCAL=1 sls invoke local -p event.json -f",
    "lint": "tslint src/**/*.ts",
    "test:unit": "NODE_ENV=test jest --config=jest.config.json --no-cache '^((?!(api\\.test\\.(ts|js))).)*$'",
    "test:api": "./shell-scripts/test-api.sh",
    "ts-run": "./shell-scripts/ts-run.sh",
    "tables:create": "SERVERLESS_LOCAL=1 npm run ts-run src/bin/create-tables.ts",
    "tables:delete": "SERVERLESS_LOCAL=1 npm run ts-run src/bin/delete-tables.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaydp17/series-notifier-serverless.git"
  },
  "author": "Jaydeep Solanki <jaydp17@gmail.com> (https://jaydp.com)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/jaydp17/series-notifier-serverless/issues"
  },
  "homepage": "https://github.com/jaydp17/series-notifier-serverless#readme",
  "devDependencies": {
    "@types/bluebird": "^3.5.3",
    "@types/faker": "^4.1.0",
    "@types/jest": "^19.2.3",
    "@types/lodash": "^4.14.63",
    "@types/node": "^6.0.66",
    "awesome-typescript-loader": "^3.1.3",
    "aws-sdk": "^2.48.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "deep-freeze": "^0.0.1",
    "faker": "^4.1.0",
    "jest": "^20.0.0",
    "lodash-webpack-plugin": "^0.11.2",
    "prettier": "1.4.4",
    "rimraf": "^2.6.1",
    "serverless": "^1.12.1",
    "ts-node": "^3.0.2",
    "tslint": "^4.5.1",
    "tslint-microsoft-contrib": "^4.0.1",
    "typescript": "^2.3.2",
    "webpack": "^2.4.1"
  },
  "dependencies": {
    "axios": "^0.16.0",
    "bluebird": "3.5.0",
    "lodash": "^4.17.4"
  }
}
