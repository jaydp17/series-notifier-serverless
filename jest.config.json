{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "mapCoverage": true,
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "setupTestFrameworkScriptFile": "<rootDir>/test/test.setup.js",
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "collectCoverageFrom": ["src/**/*.ts"],
  "globals": {
    "ts-jest": {
      "useBabelrc": true
    }
  }
}
